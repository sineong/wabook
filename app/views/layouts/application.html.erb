<!DOCTYPE html>
<html>
<head>
  <title>Wabook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <%= link_to books_path, :class => "logo" do %>
      <%= image_tag "wabook.png" %>
  <% end %>
  
  <div id="nav">
    <%= link_to "책 신규등록", books_path, :class =>"link" %>
    
    <%= link_to "명예의 전당", books_path, :class =>"link" %>
    <%= link_to "My Page", books_path, :class =>"link" %>
    <% if !signed_in? %>
        <%= link_to "login", new_user_session_path, :method => :create, :class => "link" %>
    <% else %>
        <%= link_to "logout", destroy_user_session_path, :method => :delete, :class =>"link" %>
    <% end %>
  </div>

  <div id="c">
  </div>

<%= yield %>

</body>
</html>
