<div class="book-list">
  <table class="table">
    <thead>
      <tr>
        <th class = "th1">category</th>
        <th class = "th2">title</th>
        <th class = "th3">author</th>
        <th class = "th4">publisher</th>
        <th class = "th5">available</th>
      </tr>
    </thead>
  </table>
    <% if @books.count > 0 %>
      <% @books.each do |book| %>
        <table class="table">

        <tr>
          <td class = "td1"><%= book.category %></td>
          <td class= "book-title td2" id="<%= book.id%>"><%= book.title %></td>
          <td class = "td3"> <%= book.author %></td>
          <td class = "td4"><%= book.publisher %></td>
          <% if book.returned %>
            <td class = "td5"><%= link_to "<button>available</button>".html_safe, root_path %> </td>
          <% else %>
            <td class = "td5"><%= link_to "<button>unavailable</button>".html_safe, root_path %> </td>
          <% end %>
        </tr>
        </table>
            <div class = "book-content" id= "<%= book.id %>", hidden='yes' >
              <img src=<%= book.data[:cover] %>>
              <p id="title"><%= book.title %></p>
              <p id="author"><%= book.author %></p>
              <p id="category"><%= book.category %></p>
              <p id="publisher"><%= book.publisher %></p>
              <p id="description"><%= book.data[:description] %></p>
            </div>
      <% end %>
    <% end %>
  </table>
</div>

<div class="search">
  <form action="/search">
    <select name="search_type" id="search"> 
      <option value="title">title</option>
      <option value="author">author</option>
    </select>
    <input name="search_query" type="text" id="search" />
    <input type="submit" value="search"class="seachButton" />
  </form>
</div>
