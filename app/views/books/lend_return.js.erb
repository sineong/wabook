<% if @isNotExist %>
    alert("등록되지 않은 도서입니다. 관리자에게 문의해주시기 바랍니다");
<% elsif @isReturned %>
  var r = confirm("<%= @title %>을(를) 빌리시겠습니까?")
  if (r){
    <% @book = Book.find(@bookId) %>
    <% @book.returned = false %>
    <% @book.save %>

    <% @checkout = Checkout.new %>
    <% @checkout.book_id = @bookId %>
    <% @checkout.user_id = current_user.id %>
    <% @checkout.checkoutdate = Time.now + 9.hours %>
    <% @checkout.duedate = Time.new + 9.hours + 14.day %>
    <% @checkout.returned = false %>
    <% @checkout.save %>
    alert("대출에 성공하셨습니다")
  }else{

  }
<% else %>
  var r = confirm("<%= @title %>을(를) 반납하시겠습니까?")
  if(r){
    <%= Rails.logger.info @checkoutId %>
    <% if @checkoutId != nil %>
        <% @checkout = Checkout.find(@checkoutId) %>
      <% @checkout.returned = true %>
      <% @checkout.save %>

      <% @book = Book.find(@bookId) %>
      <% @book.returned = true %>
      <% @book.save %>
    <% end %>
    alert("반납에 성공하셨습니다")
  }else{
    alert("반납에 실패하셨습니다")
  }
<% end %>
