<div class = "user-list">
  <%= link_to "All Users  ", users_path%>
  <%= link_to "Lending Users  ",{:controller => 'users', :action => 'lend_user'} %>
  <%= link_to "Overdue Users", {:controller => 'users', :action => 'late_user'}, :class => "isSelected"%>

  <table class ="table">
    <tr>
      <th> name </th>
      <th> email </th>
      <th> overdue book </th>
      <th> return date </th>
      <th> overdued date </th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td> <%= user.name %> </td>
        <td> <%= user.email %> </td>
        <% @books[user].each do |book| %>
          <td> <%= book.title %> </td>
          <td> <%= book.checkouts.last.duedate %> </td>
          <td> <%= Time.now+9.hours - book.checkouts.last.duedate %> </td>
        <% end %>
      </tr>
    <%end %>
  </table>
</div>
